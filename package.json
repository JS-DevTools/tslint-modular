{
  "name": "tslint-modular",
  "version": "1.6.0",
  "description": "Modular TSLint configuration",
  "keywords": [
    "tslintconfig",
    "tslint",
    "check",
    "checker",
    "code",
    "code checker",
    "code linter",
    "code standards",
    "code style",
    "enforce",
    "hint",
    "lint",
    "policy",
    "quality",
    "simple",
    "standard",
    "standard style",
    "style",
    "style checker",
    "style linter",
    "verify"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "homepage": "https://jstools.dev/tslint-modular",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/tslint-modular.git"
  },
  "license": "MIT",
  "main": "index.js",
  "files": [
    "best-practices",
    "browser",
    "node",
    "style",
    "test/index.js",
    "index.js"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage",
    "lint": "eslint .",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm test && npm run bump"
  },
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.5.2",
    "chai": "^4.1.2",
    "eslint": "^6.2.2",
    "eslint-config-modular": "^7.0.1",
    "glob": "^7.1.4",
    "mocha": "^7.0.1",
    "npm-check": "^5.9.0",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "tslint": "^6.0.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "tslint": ">=5.0.0"
  }
}
